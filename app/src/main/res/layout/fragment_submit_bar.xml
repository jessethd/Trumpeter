<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="jthd.trumpeter.SubmitBarFragment"
                android:id="@+id/SubmitBarLayout">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundTextView"
        android:background="@drawable/separation_lines"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/submitTrumpetButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitTrumpetButton"
        android:text="@string/whatsGoingOnString"
        android:background="@android:color/transparent"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:typeface="serif"
        android:textAllCaps="false"
        android:textColor="@color/colorSubmitTrumpet"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="12dp"/>





    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="@color/colorText"
        android:id="@+id/detailedTrumpetSeparationLine"
        android:layout_alignBottom="@+id/backgroundTextView"
        android:layout_alignLeft="@+id/submitTrumpetButton"
        android:layout_alignStart="@+id/submitTrumpetButton"
        android:layout_marginBottom="8dp"/>


</RelativeLayout>
